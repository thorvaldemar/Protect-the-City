package me.thorvaldemar;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;

import me.thorvaldemar.engine.Game;
import me.thorvaldemar.engine.GameObject;
import me.thorvaldemar.engine.Handler;

public class GUI {

	public void renderer(Graphics g) {
		g.setColor(Color.WHITE);
		Font font = new Font("areal", Font.BOLD, 24);
		g.setFont(font);
		g.drawString(Main.round + "", 10, Game.HEIGHT - 40);

		// Bullets
		if (Main.player.reloading) {
			g.setColor(Color.orange);
			for (int i = 1; i <= Main.player.maxBullets/Main.player.reloadingTimer; i++) {
				g.fillRect(Game.WIDTH - 20, (Game.HEIGHT - 40) - i * 4, 6, 3);
			}
		} else {
			g.setColor(Color.yellow);
			for (int i = 1; i <= Main.player.Bullets; i++) {
				g.fillRect(Game.WIDTH - 20, (Game.HEIGHT - 40) - i * 4, 6, 3);
			}
		}

		//Ammo
		g.setColor(Color.yellow);
		Font ammo = new Font("areal", Font.BOLD, 16);
		g.setFont(ammo);
		g.drawString(Main.player.ammo + "", Game.WIDTH - 50, Game.HEIGHT - 40);
		
		//Gun
		if (Weapons.isPistol(Main.player.gunSlot)) {
			g.drawImage(GameObject.getImage(Weapons.getImage(Main.player.gunSlot)), 0, 0, 64, 64, null);
		} else {
			g.drawImage(GameObject.getImage(Weapons.getImage(Main.player.gunSlot)), 0, 0, 128, 64, null);
		}
		
		//Gun name
		g.setColor(Color.WHITE);
		Font name = new Font("areal", Font.BOLD, 16);
		g.setFont(name);
		g.drawString(Main.player.gunSlot.name().replaceAll("_", " "), 10, 80);
		
		
		// Health
		g.setColor(Color.RED);
		for (int i = 1; i <= Main.player.Health/2; i++) {
			g.fillRect(Game.WIDTH - 30, (Game.HEIGHT - 40) - i * 4, 6, 3);
		}
		
		//Is dead
		if (Main.player.Health <= 0) {
			g.setColor(new Color(150, 0, 0, 200));
			g.fillRect(0, 0, Game.WIDTH, Game.HEIGHT);
			g.setColor(Color.WHITE);
			Font died = new Font("areal", Font.BOLD, 72);
			g.setFont(died);
			g.drawString("YOU DIED", Game.WIDTH/2-(8*21), Game.HEIGHT/2-(8*2));
			
			Font con = new Font("areal", 0, 12);
			g.setFont(con);
			g.drawString("\'SPACE\' to try again", Game.WIDTH/2-(8*6), Game.HEIGHT/2+10);
		}
		
		if (Main.isPlaying && Handler.paused) {
			g.setColor(new Color(0, 0, 0, 200));
			g.fillRect(0, 0, Game.WIDTH, Game.HEIGHT);
			
			Font text = new Font("areal", Font.BOLD, 16);
			g.setFont(text);
			
			g.setColor(new Color(250, 250, 250, 255));
			g.fillRect((Game.WIDTH/2)-64, (Game.HEIGHT/2)-16, 128, 32);
			
			g.setColor(Color.BLACK);
			g.drawString("RESUME", (Game.WIDTH/2)-29, (Game.HEIGHT/2)+8);
		}
		
	}
	
}
